---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>Scalapenos</title>
 <link href="http://scalapenos.com/atom.xml" rel="self"/>
 <link href="http://scalapenos.com"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://scalapenos.com/</id>
 <author>
   <name>Age Mooij</name>
   <email>age@scalapenos.com</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://scalapenos.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://scalapenos.com{{ post.id }}</id>
   <content type="html">{{ post.excerpt | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
